[Unit]
Description=Stunnel (<%= @name %>)
Documentation=man:stunnel(8)
After=syslog.target network.target

[Service]
Type=forking
GuessMainPID=no
PIDFile=<%= @pid %>
ExecStart=<%= @svc_bin %> <%= @config_file %>
KillMode=process
TimeoutStopSec=2

Restart=on-failure
RestartSec=10s

LimitNOFILE=20480
LimitNPROC=10000

[Install]
WantedBy=multi-user.target
